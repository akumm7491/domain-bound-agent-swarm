{
  "name": "ai-social-media-management-platform",
  "version": "0.1.0",
  "description": "AI-powered social media management platform with domain-specific agents",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" --ignore-path .gitignore",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "docker:build": "docker build -t asmmp:latest .",
    "docker:deploy": "./scripts/deploy.sh docker",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "k8s:build": "docker build -t asmmp:latest .",
    "k8s:deploy": "./scripts/deploy.sh kubernetes",
    "k8s:delete": "kubectl delete namespace asmmp",
    "k8s:logs": "kubectl logs -f -l app=asmmp -n asmmp",
    "k8s:status": "kubectl get all -n asmmp",
    "prepare": "node -e \"if(process.env.HUSKY !== '0') require('husky').install()\"",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@bull-board/express": "^5.9.1",
    "@discordjs/rest": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.2",
    "bull": "^4.11.3",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.63.0",
    "openai": "^4.7.1",
    "prom-client": "^14.2.0",
    "redis": "^4.6.8",
    "twitter-api-sdk": "^1.2.1",
    "uuid": "^9.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/jest": "^29.5.3",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "jest": "^29.6.2",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
